<form method="post" action="/hogwarts-students">
  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  />

  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  />

  <label for="house-selection">Select a house:</label>
  <select name="house_id" id="house-selection">
    <% @houses.each() do |house| %>
      <option value="<%= house.id %>"><%= house.name() %></option>
    <% end %>
  </select>

  <label for="age-field">Age:</label>
  <input
  type="number"
  name="age"
  id="age-field"
  />

  <input type="submit" value="Create Student">
</form>
